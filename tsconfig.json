{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "alwaysStrict": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules/"
    ]
}